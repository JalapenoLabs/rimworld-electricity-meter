<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <!-- Name -->
    <defName>ElectricityMeter</defName>
    <label>electricity meter</label>
    <description>A meter that connects to a power grid and displays the power usage of all devices
      on that network.</description>

    <!-- World -->
    <tickerType>Normal</tickerType>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <graphicData>
      <texPath>ElectricityMeter/Things/Building/Meter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <shaderType>Cutout</shaderType>
    </graphicData>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>-2</Beauty>
    </statBases>

    <!-- Orders -->
    <category>Building</category>
    <designationCategory>Power</designationCategory>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>

    <!-- Game -->
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>

    <!-- Logic -->
    <thingClass>ElectricityMeter.Building_ElectricityMeter</thingClass>

    <inspectorTabs>
      <li>ElectricityMeter.ITab_ElectricityMeter</li>
    </inspectorTabs>
  </ThingDef>
</Defs>